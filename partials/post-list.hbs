{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}

<article class="post-list {{post_class}} {{#is "home"}}{{#if feature_image}}{{#has index="0"}}post-card-large{{/has}}{{/if}}{{/is}}">

    <div class="post-list-content">

        <a class="post-list-content-link" href="{{url}}">
            <header class="post-list-header">
                <h2 class="post-list-title">{{title}}</h2>
            </header>
            <section class="post-list-excerpt">
                <p>{{excerpt}}</p>
            </section>
        </a>

    </div>{{!--/.post-card-content--}}

</article>
